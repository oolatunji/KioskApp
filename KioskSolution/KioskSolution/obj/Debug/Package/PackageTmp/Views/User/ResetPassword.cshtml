@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Password Reset</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/common_libraries")
    @Scripts.Render("~/bundles/resetpassword")
</head>
<body>

    <!-- Form area -->
    <div class="admin-form">
        <div class="container">

            <div class="row">
                <div class="col-md-12">
                    <!-- Widget starts -->
                    <div class="widget worange">
                        <!-- Widget head -->
                        <div class="widget-head">
                            <i class="fa fa-lock"></i> Reset Password
                        </div>

                        <div class="widget-content">
                            <div class="padd">
                                <!-- Login form -->
                                <div class="form-horizontal">
                                    <!-- Email -->
                                    <div class="form-group">
                                        <label class="control-label col-lg-3" for="username">New Password</label>
                                        <div class="col-lg-9">
                                            <input type="password" class="form-control" id="newPassword" placeholder="New Password">
                                        </div>
                                    </div>
                                    <!-- Password -->
                                    <div class="form-group">
                                        <label class="control-label col-lg-3" for="password">Confirm Password</label>
                                        <div class="col-lg-9">
                                            <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password">
                                        </div>
                                    </div>
                                    <!-- Remember me checkbox and sign in button -->

                                    <div class="col-lg-9 col-lg-offset-3">
                                        <button id="updateBtn" onclick="resetPassword()" type="submit" class="btn btn-info btn-sm">Reset</button>
                                    </div>
                                    <br />
                                </div>

                            </div>
                        </div>

                        <div class="widget-foot">
                            <span style="font-family:Calibri;font-weight:bold;color:navy">Reset your password</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

