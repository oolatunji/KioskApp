
@{
    ViewBag.Title = "Add Pan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/addpan")

<div class="page-head">
    <h2 class="pull-left"><i class="fa fa-tags"></i> Pan Management</h2>

    <!-- Breadcrumb -->
    <div class="bread-crumb pull-right">
        <a><i class="fa fa-tags"></i> Pan Management</a>
        <!-- Divider -->
        <span class="divider">/</span>
        <a class="bread-current"> Add Pan</a>
    </div>

    <div class="clearfix"></div>

</div>
<div class="matter">
    <div class="container">
        <div class="row">
            <div class="col-md-12">


                <div class="widget wgreen">

                    <div class="widget-head">
                        <div class="pull-left">Add Pan</div>

                        <div class="clearfix"></div>
                    </div>

                    <div class="widget-content">
                        <div class="padd">
                            <br />
                            <!-- Form starts.  -->
                            <form class="form-horizontal" role="form">

                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Pan</label>
                                    <div class="col-lg-5">
                                        <input type="text" class="form-control" title="Pan" placeholder="Enter Pan" id="pan" autofocus="" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Serial Number</label>
                                    <div class="col-lg-5">
                                        <input type="text" class="form-control" title="Serial Number" placeholder="Enter Pan Serial Number" id="serialNumber" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-offset-2 col-lg-6">
                                        <button id="addBtn" type="button" class="btn btn-outline btn-primary" onclick="addPan()"><i class="fa fa-cog"></i> Add</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="widget-foot">
                        Add new Pan.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



