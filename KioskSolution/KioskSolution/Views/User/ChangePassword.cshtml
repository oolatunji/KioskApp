
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/bundles/changepassword")
<div class="page-head">
    <h2 class="pull-left"><i class="fa fa-pencil-square-o"></i> Password Management</h2>

    <!-- Breadcrumb -->
    <div class="bread-crumb pull-right">
        <a><i class="fa fa-pencil-square-o"></i> Password Management</a>
        <!-- Divider -->
        <span class="divider">/</span>
        <a class="bread-current"> Change Password</a>
    </div>

    <div class="clearfix"></div>

</div>
<div class="matter">
    <div class="container">
        <div class="row">
            <div class="col-md-12">


                <div class="widget wgreen">

                    <div class="widget-head">
                        <div class="pull-left">Change Your Password</div>

                        <div class="clearfix"></div>
                    </div>

                    <div class="widget-content">
                        <div class="padd">
                            <br />
                            <!-- Form starts.  -->
                            <form class="form-horizontal" role="form">

                                <div class="form-group">
                                    <label class="col-lg-2 control-label">New Password</label>
                                    <div class="col-lg-5">
                                        <input type="password" class="form-control" placeholder="New Password" id="newPassword">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Confirm Password</label>
                                    <div class="col-lg-5">
                                        <input type="password" class="form-control" placeholder="Confirm Password" id="confirmPassword">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-offset-2 col-lg-6">
                                        <button id="addBtn" type="button" class="btn btn-outline btn-primary" onclick="changePassword()"><i class="fa fa-user"></i> Change</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="widget-foot">
                        Change password.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

   

