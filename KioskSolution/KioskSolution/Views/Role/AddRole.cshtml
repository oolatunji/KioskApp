
@{
    ViewBag.Title = "Add Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/addroles")

<div class="page-head">
    <h2 class="pull-left"><i class="fa fa-check"></i> Role Management</h2>

    <!-- Breadcrumb -->
    <div class="bread-crumb pull-right">
        <a><i class="fa fa-check"></i> Role Management</a>
        <!-- Divider -->
        <span class="divider">/</span>
        <a class="bread-current"> Add Role</a>
    </div>

    <div class="clearfix"></div>

</div>
<div class="matter">
    <div class="container">
        <div class="row">
            <div class="col-md-12">


                <div class="widget wgreen">

                    <div class="widget-head">
                        <div class="pull-left">Add Role</div>

                        <div class="clearfix"></div>
                    </div>

                    <div class="widget-content">
                        <div class="padd">
                            <br />
                            <!-- Form starts.  -->
                            <form class="form-horizontal" role="form">

                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Name</label>
                                    <div class="col-lg-5">
                                        <input type="text" class="form-control" title="Role Name" placeholder="Enter Role Name" id="roleName" autofocus="" required>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="col-sm-offset-2 panel panel-default">
                                        <div class="panel-heading">
                                            <h3 class="panel-title" style="font-family:Arial;color:black;font-size:13px;">Functions</h3>
                                        </div>
                                        <div class="panel-body" id="dynamicfunctions">

                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-offset-2 col-lg-6">
                                        <button id="addBtn" type="button" class="btn btn-outline btn-primary" onclick="addRole()"><i class="fa fa-cog"></i> Add</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="widget-foot">
                        Add new system role.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

